.indexContainer .navSwiper {
  width:100%;
  height: 300rpx;
}

.indexContainer .navSwiper image {
  width: 100%;
  height: 100%;
}

/* 导航区域 */
.navContainer {
  display: flex;

}

.navContainer .navItem {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navItem .iconfont {
  width: 100rpx;
  height:100rpx;
  background: rgb(240, 19, 19);
  border-radius: 50rpx;
  font-size: 50rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  margin: 20rpx 0;
}
.navItem text {
  font-size: 26rpx;
}


/* 推荐歌曲 */
.recommendContainer {
  padding: 40rpx 20rpx;
}

.recommendContainer .header {
  margin-bottom: 20rpx;
}

.recommendContainer .header .title {
  font-size: 26rpx;
  color: #666;

}

.recommendContainer .header .navContent {
  height: 50rpx;
  line-height: 50rpx;
}


.recommendContainer .header .navContent .nav {
  font-size: 30rpx;
  color: #000;
}

.recommendContainer .header .navContent .more {
  float: right;
  border: 1rpx solid #333;
  font-size: 20rpx;
  border-radius: 20rpx;
  padding: 0 20rpx;
}



/* 滑屏 */
.navScroll {
  display: flex;
}

.navScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text {
  display: block;
  font-size: 26rpx;
  /*white-space: nowrap;*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;  /*webkit盒模型*/
  -webkit-line-clamp:2;  /*控制行数*/
  -webkit-box-orient: vertical;  /*规定框的子元素应该被水平或垂直排列。*/
}
