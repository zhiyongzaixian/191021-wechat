.indexContainer .navSwiper {
  width:100%;
  height: 300rpx;
}

.indexContainer .navSwiper image {
  width: 100%;
  height: 100%;
}

/* 导航区域 */
.navContainer {
  display: flex;

}

.navContainer .navItem {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navItem .iconfont {
  width: 100rpx;
  height:100rpx;
  background: rgb(240, 19, 19);
  border-radius: 50rpx;
  font-size: 50rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  margin: 20rpx 0;
}
.navItem text {
  font-size: 26rpx;
}


/* 推荐歌曲 */
.recommendContainer {
  padding: 40rpx 20rpx;
}




/* 滑屏 */
.navScroll {
  display: flex;
  height: 300rpx;
}

.navScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text {
  display: block;
  font-size: 26rpx;
  /*white-space: nowrap;*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;  /*webkit盒模型*/
  -webkit-line-clamp:2;  /*控制行数*/
  -webkit-box-orient: vertical;  /*规定框的子元素应该被水平或垂直排列。*/
}


/* 排行榜 topList */
.topList {
  padding: 40rpx 20rpx;
}

.topListSwiper {
  height: 460rpx;
}

.swiperContent {
  width: 96%;
  background: #fbfbfb;
}

.swiperContent .title {
  font-size: 28rpx;
  line-height: 80rpx;
}

.musicContent {
  display: flex; /* 当一个元素使用display：flex以后其下边的子元素会自动变成block */
  margin-top: 20rpx;
}

.musicContent .musicImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.musicContent text {
  height: 100rpx;
  line-height: 100rpx;
}

.musicContent .count {
  width: 100rpx;
  text-align: center;
}

