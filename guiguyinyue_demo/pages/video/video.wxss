.videoContainer .header {
  display: flex;
  padding: 10rpx;
}


.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}


.videoContainer .search {
  border: 1rpx solid #eee;
  border-radius: 6rpx;
  flex: 1;
  margin: 0 20rpx;
}

.videoContainer .search  input {
  width: 100%;
  height: 100%;
}


.videoContainer .search .placeholder {
  font-size: 28rpx;
  text-align: center;
  color: #d43c33;
}


/* 导航 */
.videoNav {
  display: flex;
  white-space: nowrap; /*flex布局，涉及到文字，需要white-space: nowrap*/
  margin: 20rpx 0;
  height: 62rpx;
}

.videoNav .navItem {
  padding: 0 30rpx;
}


.videoNav .navItem .navItemContent {
  height: 60rpx;
  font-size: 30rpx;
}


.videoNav .navItem .navItemContent.active {
  border-bottom: 1rpx solid #d43c33;
}



/* videoList视频列表*/
.videoList {
  /* vh, vw 视口单位   1vh=1/100视口高度   1vw = 1/100视口宽度*/
  height: calc(100vh - 160rpx);
}
.videoItem {
  padding: 0 3%;
}


.videoList video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}


.videoList .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}

