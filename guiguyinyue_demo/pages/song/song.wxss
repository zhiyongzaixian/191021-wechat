.songContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5)
}

.dong {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 50%;
  margin: 10rpx 0;
  z-index: 100;
}
/* 摇杆 */
.needle {
  position: relative;
  z-index: 99;
  left: 60rpx;
  top: -40rpx;
  width: 192rpx;
  height: 274rpx;
  /*设置旋转中心点*/
  transform-origin: 40rpx 0;
  transform: rotate(-20deg);
  transition: transform 1s;
}


.needle.needleRotate {
  transform: rotate(0deg);
}

.discContainer {
  position: relative;
  top: -170rpx;
  z-index: 1;
  width:598rpx;
  height: 598rpx;
}


.discContainer.discRotate {
  /*transform: rotate(360deg);*/
  /*transition: transform 1s;*/
  animation: disc 4s linear infinite;
  animation-delay: 1s; /* 延迟动画开始 */
}
/* 设置动画的帧数 */
@keyframes disc {
  /* from to 只能用于单一的动画，只有起始帧和结束帧 */
  /* 百分比 动画较为复杂， 0 - 100% 可以无限拆分*/

  from {transform: rotate(0deg);}
  to {
    transform: rotate(360deg);
  }
}




/*磁盘*/
.discContainer .disc {
  width: 100%;
  height: 100%;
}


.discContainer .musicImg {
  /*让一个元素基于父元素水平垂直居中方法： */
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}
